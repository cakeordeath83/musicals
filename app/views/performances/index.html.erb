
<div class="container col-md-offset-2 col-md-8">
  
  <% @performances.group_by{|p| p.date.year}.each do |key, perf| %>
  <h3><%= key %><br></h3>

        
          <div class="table-responsive">
            <table class="table">
               <thead>
                  <tr>
                    <th></th>
                    <th>Show name</th>
                    <th>Date</th>
                    <th>Theatre</th>
                  </tr>
              </thead>

              <tbody>
                <% perf.sort_by{|p| p.date}.reverse.each do |performance| %>
                  <tr>
                    <td class="col-md-2"><%= link_to (image_tag performance.show.picture.url(:thumb)), show_path(performance.show.id) %></td>
                    <td class="col-md-2"><h5><%= link_to performance.show.name, show_path(performance.show)%></h5></td>  
                    <td class="col-md-2"><%= link_to performance.date, performance_path(performance) %></td>
                    <td class="col-md-2"><h5><%= link_to performance.theatre.name, theatre_path(performance.theatre) %></h5><p><%= performance.theatre.city%></p></td>
                  </tr>
                <% end %>
              </tbody>
              
          </table>
         </div><!-- table responsive -->
      
    <% end %> <!-- group by -->
</div><!-- container -->
   




