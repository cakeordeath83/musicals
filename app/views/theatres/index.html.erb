<div class="container">
  <h1>All Theatres</h1>

  <div class="row theatre-row">
     <% @theatres.each do |theatre| %>
       <div class="col-md-4" id="theatre">
           <h4><%= theatre.name %></h4>
           <p><%= theatre.city %></p>
             
               <% @performances.find_all{|p| p.theatre_id == theatre.id}.each do |x| %>
         <p><%= image_tag x.show.picture.url(:thumb)%></p> 
         <p><%=x.date%></p>
        
                
             
               <% end %>  
             
       </div>
     <% end %>
    
  </div>
</div>
