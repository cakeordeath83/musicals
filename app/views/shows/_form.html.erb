<div class="container">
  <div class="col-md-offset-3 col-md-6 well form">
    <%= bootstrap_form_for (@show) do |f| %>
      <%= f.text_field :name %>
      <%= f.file_field :picture %>
      
    <div class="row">
        <div class="col-md-offset-5" style="padding-top:30px;">
           <%= f.submit "Create show", :class => "btn btn-primary"%>
        </div>
    </div>
    <% end %>
  </div>
</div>