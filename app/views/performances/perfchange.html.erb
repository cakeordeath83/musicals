<div class="container" style="padding-bottom:40px;">
  <h1>Editing performances</h1>
  <h5 style="text-align:center;">Click on show or theatre to edit</h5>
</div>

<div class="col-md-2">
</div>
<div class="container col-md-8">
  <div class="table-responsive">
    <table class="table">

    <thead>
      <tr>
        <th></th>
        <th>Show name</th>
        <th>Date</th>
        <th>Theatre</th>
        
      </tr>
    </thead>

    <tbody>
      
      <%@performances.sort_by{|p| p.date}.reverse.each do |performance| %>
        <tr>
          <td><%= link_to (image_tag performance.show.picture.url(:thumb)), edit_show_path(performance.show.id) %></td>
        <td><h5><%= performance.show.name%></h5></td>  
        <td><%= performance.date %></td>
          <td><h5><%= link_to performance.theatre.name, edit_theatre_path(performance.theatre.id) %></h5><p><%= performance.theatre.city%></p></td>
          <td><button><%= link_to "Edit", edit_performance_path(performance)%></button></td>
          <td><button><%= link_to "Delete", performance_path(performance), method: :delete, data: {confirm: "Are you sure?"}%></button></td>
        </tr>
      <% end %>
      
      </tbody>

    </table>
  </div>
</div>




<div class="col-md-3">
  <button><%= link_to "Make a change", perfchange_path %></button>
</div>