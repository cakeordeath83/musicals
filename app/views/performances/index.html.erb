
<div class="col-md-2">
</div>
<div class="container col-md-8">
  <div class="table-responsive">
    <table class="table">

    <thead>
      <tr>
        <th></th>
        <th>Show name</th>
        <th>Date</th>
        <th>Theatre</th>
        
      </tr>
    </thead>

    <tbody>
      
      <%@performances.sort_by{|p| p.date}.reverse.each do |performance| %>
        <tr>
        <td><%= link_to (image_tag performance.show.picture.url(:thumb)), show_path(performance.show.id) %></td>
        <td><%= performance.show.name%></td>  
        <td><%= performance.date %></td>
        <td><%= performance.theatre.name %></td>
        <% end %><br>
      </tr>
      </tbody>

    </table>
  </div>
</div>

<div class="col-md-2">
</div>



<div class="col-md-3">
<button><%= link_to "Add a new performance", new_performance_path %></button>
</div>

