<div class="container" style="padding-bottom:40px;">
  <h1>Editing performances</h1>
  <h5 style="text-align:center;">Click on show or theatre to edit</h5>
</div>


<div class="container col-md-offset-1 col-md-10">
  <div class="table-responsive">
            <table class="table">
               <thead>
                  <tr>
                    <th></th>
                    <th>Show name</th>
                    <th>Date</th>
                    <th>Theatre</th>
                    <th></th>
                  </tr>
              </thead>

              <tbody>
                <% @performances.sort_by{|p| p.date}.reverse.each do |performance| %>
                  <tr>
                    <td class="col-md-1 images"><%= link_to (image_tag performance.show.picture.url(:thumb)), show_path(performance.show.id) %></td>
                    <td class="col-md-4"><h5><%= link_to performance.show.name, show_path(performance.show)%></h5></td>  
                    <td class="col-md-1"><h5><%= performance.date%></h5></td>
                    <td class="col-md-2"><h5><%= link_to performance.theatre.name, theatre_path(performance.theatre) %></h5><p><%= performance.theatre.city%></p></td>
                    <td class="col-md-1"><%= link_to "Edit", edit_performance_path(performance), :class => "btn btn-sm btn-primary" %>   <%= link_to "Delete", performance_path(performance), method: :delete, data: {confirm: "Are you sure?"}, :class => "btn btn-sm btn-default" %></td>
                  </tr>
                <% end %>
              </tbody>
              
          </table>
    </div><!-- table responsive -->
</div>



