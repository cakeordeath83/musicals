

<div class="container">
  <div class="text-center">
    <h1>What we saw at <%= @theatre.name %></h1>
  </div>
  <div class="table-responsive">
    <table class="table">
      <thead>
            <tr>
             <th></th>
             <th>Show</th>
             <th>Date</th>
            </tr>
      </thead>
      <tbody>
        
        <% @performances.find_all{|p| p.theatre_id == @theatre.id}.each do |x| %>
        <tr>
          <td><%= image_tag x.show.picture.url(:thumb) %></td>
          <td><%= x.show.name %></td>
          <td><%= x.date %></td>
          
          <% end %>
        </tr>
      </tbody>

      
    </table>
  </div>
</div>




<button class="btn"><%= link_to "Back to All theatres", theatres_path %></button>