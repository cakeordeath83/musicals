<h1>All Shows</h1>

<div class="addbutton">
<button class="btn btn-default"><%= link_to "Add new show", new_show_path %></button>
  </div>

<div class="container col-md-offset-3 col-md-6">
  <div class="table-responsive">
    <table class="table">
      <thead>
            <tr>
              <th></th>
              <th>Show name</th>
              <th>Number of times seen</th>
              <th></th>
            </tr>
      </thead>

      <tbody>
       <% @shows.each do |show| %>
          <tr>
            <td class="col-md-1"><%= link_to (image_tag show.picture.url(:thumb)), show_path(show) %></td>
            <td class="col-md-2"><%= show.name %></td>
            <td class="col-md-1"><%= link_to @performances.find_all{|p| p.show_id == show.id}.count, show_path(show) %></td>
            <!-- Pretty sure that there should be a better way of doing this! -->
            <td class="col-md-1"><button class="button"><%= link_to "Edit", edit_show_path(show) %></button></td>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

