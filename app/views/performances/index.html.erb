
<div class="col-md-2">
</div>
<div class="container col-md-8">
  <div class="table-responsive">
    <table class="table">

    <thead>
      <tr>
        <th></th>
        <th>Show name</th>
        <th>Date</th>
        <th>Theatre</th>
        
      </tr>
    </thead>

    <tbody>
      
      <%@performances.sort_by{|p| p.date}.reverse.each do |performance| %>
        <tr>
        <td><%= link_to (image_tag performance.show.picture.url(:thumb)), show_path(performance.show.id) %></td>
        <td><h5><%= performance.show.name%></h5></td>  
        <td><%= performance.date %></td>
        <td><h5><%= performance.theatre.name %></h5><p><%= performance.theatre.city%></p></td>
        </tr>
      <% end %>
      
      </tbody>

    </table>
  </div>
</div>




