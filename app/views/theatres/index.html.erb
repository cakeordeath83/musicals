<h1>All Theatres</h1>

<div class="col-md-2">
</div>
<div class="container col-md-8">
  <div class="table-responsive">
    <table class="table">
      <thead>
            <tr>
              <th></th>
              <th>Theatre name</th>
              <th>Number of times visited</th>
              <th></th>
            </tr>
      </thead>

      <tbody>
        <% @theatres.each do |theatre| %>
          <tr>
            <td><%= link_to (image_tag theatre.picture.url(:thumb)), theatre_path(theatre) %></td>
            <td><%= theatre.name %></td>
            <td><%= link_to @performances.find_all{|p| p.theatre_id == theatre.id}.count, theatre_path(theatre) %></td>
            <!-- Pretty sure that there should be a better way of doing this! -->
            <td><button class="button"><%= link_to "Edit", edit_theatre_path(theatre) %></button></td>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="col-md-2">
</div>

<div class="col-md-3">
<button class="button"><%= link_to "Add new theatre", new_theatre_path %></button>
</div>