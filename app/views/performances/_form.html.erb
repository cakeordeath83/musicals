<div class="container">
  <div class="col-md-offset-3 col-md-6">
    <%= bootstrap_form_for @performance do |f| %>

      <!-- Date selector -->
      <%= f.date_field :date %>

      <!-- Theatre selector -->
        <div class="col-md-12">
          <h3 style="text-align:center;">Choose a theatre below</h3><br>
            <div class="col-md-6" style="text-align:center;">
            <%= f.select(:theatre_id, @theatre_options) %>
            </div>
            <div class="col-md-2">
            <p>Or</p><br>
            </div>
            <div class="col-md-4>">
              <button class="btn"><%=link_to "Add a new theatre", new_theatre_path %></button>
            </div>
        </div>

        <!-- show selector -->
          <div class="col-md-12">
              <h3 style="text-align:center;">Choose a show below</h3><br>
                <div class="col-md-6" style="text-align:center;">
                <%= f.select(:show_id, @show_options) %>
                </div>
                <div class="col-md-2">
                <p>Or</p><br>
                </div>
                <div class="col-md-4>">
                  <button class="btn"><%=link_to "Add a new show", new_show_path %></button>
                </div>
            </div>
            <br>

         <!-- Submit button -->
            <div class="col-md-offset-4"><%= f.submit %></div>
            <br>

    <% end %>
  </div>
</div> <!-- container -->

